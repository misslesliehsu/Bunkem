<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    <p class="center error"><%= error %></p>
  <%end%>
<% end %>

<div class="user-form">
<%=form_for @user do |f|%>
Name: <br />
<%=f.text_field :name%><br/>
Password: <br />
<%= f.password_field :password %><br />

<div class="green button third center"><%= f.submit "Create Account", class: "b_link" %></div>
<%end%>
</div>
