<% if flash[:error] %>
  <%=flash[:error]%>
<% end %>


<h1>Log In</h1>

<%= form_tag "/sessions" do %>
  <%= label_tag "Name" %>
  <%= text_field_tag :name %>

  <%= label_tag "Password" %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log In", class: "submit" %>
<% end %>

<%=link_to "OR -- Create New Account", new_user_path%>
